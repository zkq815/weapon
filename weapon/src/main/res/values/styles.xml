<resources>

    <!-- Base application theme. -->
    <style name="WeaponAppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- actionbar color -->
        <item name="colorPrimary">@color/blue_beika</item>
        <!-- statusbar color -->
        <item name="colorPrimaryDark">@color/blue_beika</item>

        <!-- default checked color -->
        <item name="colorAccent">@color/blue_beika</item>
        <!-- default actionbar title color -->
        <item name="android:textColorPrimary">@color/blue_beika</item>

        <!--页面背景色-->
        <item name="android:windowBackground">@color/white</item>
        <!--底部导航栏颜色-->
        <!--<item name="android:navigationBarColor">@color/navigationColor</item>-->
        <!--各个控制控件的默认颜色-->
        <item name="colorControlNormal">@color/blue_beika</item>

    </style>

    <style name="my_dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

<!--    <style name="dialogstyle" parent="android:Animation">-->
<!--        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>-->
<!--        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>-->
<!--    </style>-->

    <!--扫描框-->
    <declare-styleable name="ViewfinderView">
        <attr name="phone_scan_inner_width" format="dimension" />
        <attr name="phone_scan_inner_height" format="dimension" />
        <attr name="phone_scan_inner_marginTop" format="dimension" />
        <attr name="phone_scan_inner_corner_color" format="color" />
        <attr name="phone_scan_inner_corner_length" format="dimension" />
        <attr name="phone_scan_inner_corner_width" format="dimension" />
        <attr name="phone_scan_inner_scan_bitmap" format="reference" />
        <attr name="phone_scan_inner_scan_speed" format="integer" />
        <attr name="phone_scan_inner_scan_is_circle" format="boolean" />
    </declare-styleable>
    <!-- 二维码扫描框 -->
    <declare-styleable name="QRCoverView">
        <attr name="scanRectWidth" format="dimension"/>
        <attr name="scanRectHeight" format="dimension"/>

        <attr name="cornerLength" format="dimension"/>
        <attr name="cornerWidth" format="dimension"/>
        <attr name="cornerOutside" format="boolean"/>

        <attr name="cornerColor" format="color"/>
        <attr name="outsideBackgroundColor" format="color"/>
        <!--<attr name="innerBackgroundColor" format="color"/>-->

        <attr name="laserVisible" format="boolean"/>
        <attr name="laserColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ColorArcProgressBar">
        <attr name="back_color" format="color" />
        <attr name="front_color1" format="color" />
        <attr name="front_color2" format="color" />
        <attr name="front_color3" format="color" />
        <attr name="back_width" format="dimension" />
        <attr name="front_width" format="dimension" />
        <attr name="is_need_title" format="boolean" />
        <attr name="is_need_content" format="boolean" />
        <attr name="is_need_unit" format="boolean" />
        <attr name="is_need_dial" format="boolean" />
        <attr name="string_title" format="string" />
        <attr name="string_unit" format="string" />
        <attr name="total_engle" format="integer" />
        <attr name="current_value" format="float" />
        <attr name="max_value" format="float" />
    </declare-styleable>

    <!--自定义网络加载框-->
    <style name="m_base_loading_net_progress_bar" parent="Base.Widget.AppCompat.ProgressBar" />


</resources>
